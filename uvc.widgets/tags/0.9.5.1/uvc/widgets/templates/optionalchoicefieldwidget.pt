<select id="#" name="#" class="#"
        tal:define="value widget/selectValue"
        tal:attributes="name widget/identifier;
                        id widget/htmlId;
                        class string:${widget/htmlClass} alternative-choice">
  <option value="#"
          tal:repeat="choice widget/choices"
          tal:attributes="value choice/value;
                          selected python: choice.value == value and 'selected' or None"
          tal:content="python: choice.title or choice.value">
    Option
  </option>
</select>
<span>
  Sonstiges: 
  <input type="text" id="#" name="#" class="alternative-input"
         tal:attributes="name widget/identifier;
                         id widget/htmlId;
                         value widget/textValue">
</span>                                                    
